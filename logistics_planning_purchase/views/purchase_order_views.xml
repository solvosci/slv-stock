<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_form_inherit_all" model="ir.ui.view">
        <field name="name">purchase.order.form all (in logistics_planning_purchase)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_view_ls_account_move"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('logistics_account_move_count', '=', 0)]}"
                >
                    <field
                        name="logistics_account_move_count"
                        widget="statinfo"
                        string="Logistics Bills"
                    />
                </button>
            </xpath>
            <xpath expr="//group/field[@name='company_id']" position="after">
                <field
                    name="logistics_schedule_skip"
                    groups="base.group_no_one"
                />
            </xpath>            
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='sequence']"
                position="after"
            >
                <field name="ls_schedule_allowed" invisible="1" />
                <button
                    name="action_logistics_schedule_add"
                    icon="fa-truck"
                    class="p-0"
                    type="object"
                    title="Add schedule(s)"
                    attrs="{'invisible': [
                        '|',
                        ('state', 'in', ['draft', 'sent', 'to approve']),
                        ('ls_schedule_allowed', '=', False),
                    ]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='taxes_id']"
                position="before"
            >
                <field name="logistics_schedule_skip" invisible="1" />                
                <field
                    name="logistics_price_unit_type"
                    attrs="{'invisible': [('logistics_schedule_skip', '=', True)]}"
                />
                <field
                    name="logistics_price_unit" widget="monetary"
                    attrs="{'invisible': [('logistics_schedule_skip', '=', True)]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='taxes_id']"
                position="before"
            >
                <field
                    name="logistics_price_unit_type"
                    attrs="{'column_invisible': [('parent.logistics_schedule_skip', '=', True)]}"
                    optional="hide"
                />
                <field
                    name="logistics_price_unit"
                    attrs="{'column_invisible': [('parent.logistics_schedule_skip', '=', True)]}"
                    optional="hide" 
                    widget="monetary"
                />
                <field
                    name="logistics_schedule_init"
                    optional="show" 
                    attrs="{
                        'column_invisible': [
                            '|',
                            ('parent.logistics_schedule_skip', '=', True),
                            ('parent.state', 'in', ['purchase', 'done', 'cancel']),
                        ],
                    }"
                />
            </xpath>
            <field name="incoterm_id" position="after">
                <field
                    name="ls_transport_type"
                    attrs="{'invisible': [('logistics_schedule_skip', '=', True)]}"
                />
            </field>
        </field>
    </record>

    <record id="purchase_order_view_form_inherit_schedules" model="ir.ui.view">
        <field name="name">purchase.order.form schedules (in logistics_planning_purchase)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"/>
        <field name="groups_id" eval="[(4, ref('logistics_planning_base.group_lp_user'))]" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='purchase_delivery_invoice']"
                position="before"
            >
                <page
                    name="logistics_schedules" string="Logistics Schedules"
                    attrs="{'invisible': [('logistics_schedule_ids', '=', [])]}"
                >
                    <field name="logistics_schedule_ids">
                        <tree
                            decoration-muted="state=='cancel'"
                            decoration-success="state=='done'"
                            decoration-danger="state=='draft'"
                        >
                            <field name="stock_move_id" />
                            <field name="transport_type" />
                            <field name="product_id" />
                            <field name="product_uom_qty" />
                            <field name="scheduled_load_date" />
                            <field name="commitment_date" />
                            <field name="currency_id" invisible="1"/>
                            <field name="logistics_price_unit" widget="monetary" />
                            <field name="logistics_price_unit_done" widget="monetary" />
                            <field name="carrier_id" />
                            <field name="license_plate_1" />
                            <field name="license_plate_2" />
                            <field name="state" />
                            <field name="note" optional="hide" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
