<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fcd_document_product_product_action" model="ir.actions.act_window">
        <field name="name">FCD Documents</field>
        <field name="res_model">fcd.document</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_product_id': active_id}</field>
        <field name="binding_model_id" ref="fcd.model_fcd_document"/>
        <field name="domain">[('product_id', '=', active_id)]</field>
    </record>

    <record id="product_product_view_inherit_form" model="ir.ui.view">
        <field name="name">product.product.form (FCD)</field>
        <field name="model">product.product</field>
        <field name="groups_id" eval="[(4, ref('fcd.group_fcd_user'))]"/>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="%(fcd_document_product_product_action)d" type="action" icon="fa-file-text-o"  help="FCD Document" attrs="{'invisible': [('fcd_document_ids', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="fcd_document_ids" invisible="1"/>
                            <field name="fcd_document_count" widget="statinfo" nolabel="1" class="mr4" />
                        </span>
                        <span class="o_stat_text">Fcd Document</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="product_product_view_inherit_fcd_form" model="ir.ui.view">
        <field name="name">product.product.form (FCD)</field>
        <field name="model">product.product</field>
        <field name="groups_id" eval="[(4, ref('fcd.group_fcd_user'))]"/>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="official_commercial_name" />
                <field name="fao" />
                <field name="fcd_expiration_days" />
                <field name="caliber" />
            </xpath>
        </field>
    </record>

</odoo>
