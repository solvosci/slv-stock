<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="fcd_production_method_action" model="ir.actions.act_window">
        <field name="name">FCD Production Method</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fcd.production.method</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="fcd_production_method_view_tree" model="ir.ui.view">
        <field name="name">fcd.production.method.view.tree</field>
        <field name="model">fcd.production.method</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="fcd_production_method_view_form" model="ir.ui.view">
        <field name="name">fcd.production.method.view.form</field>
        <field name="model">fcd.production.method</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fcd_production_method_view_search" model="ir.ui.view">
        <field name="name">fcd.production.method.view.search</field>
        <field name="model">fcd.production.method</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

</odoo>
