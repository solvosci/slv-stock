<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view_inherited">
        <field name="name">product.template.form (FCD)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scientific_name']" position="after">
                <field name="official_commercial_name" />
                <field name="fao" />
                <field name="fcd_expiration_days" />
                <field name="caliber" />
                <field name="presentation_id" />
            </xpath>
        </field>
    </record>
</odoo>
