<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fcd_presentation_action" model="ir.actions.act_window">
        <field name="name">FCD Presentation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fcd.presentation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="fcd_presentation_view_tree" model="ir.ui.view">
        <field name="name">fcd.presentation.view.tree</field>
        <field name="model">fcd.presentation</field>
        <field name="arch" type="xml">
            <tree >
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="fcd_presentation_view_form" model="ir.ui.view">
        <field name="name">fcd.presentation.view.form</field>
        <field name="model">fcd.presentation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="fcd_presentation_view_search" model="ir.ui.view">
        <field name="name">fcd.presentation.view.search</field>
        <field name="model">fcd.presentation</field>
        <field name="arch" type="xml">
            <search >
                <field name="name" />
                <field name="code" />
            </search>
        </field>
    </record>

</odoo>
