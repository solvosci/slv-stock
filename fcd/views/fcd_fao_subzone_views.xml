<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="fcd_fao_subzone_action" model="ir.actions.act_window">
        <field name="name">FCD FAO Subzone</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fcd.fao.subzone</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="fcd_fao_subzone_view_tree" model="ir.ui.view">
        <field name="name">fcd.fao.subzone.view.tree</field>
        <field name="model">fcd.fao.subzone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="zone_id" />
                <field name="subzone_code" />
                <field name="division_name"  />
                <field name="subzone" />
                <field name="division" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="fcd_fao_subzone_view_form" model="ir.ui.view">
        <field name="name">fcd.fao.subzone.view.form</field>
        <field name="model">fcd.fao.subzone</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                    <label class="oe_edit_only" for="name" strint="Subzone name"/>
                        <h1>
                            <field name="name" />
                        </h1>  
                   </div>
                    <group>
                        <group>
                            <field name="zone_id" />
                            <field name="subzone"/>
                        </group>
                        <group>
                            <field name="subzone_code"/>
                            <field name="division"/>
                            <field name="division_name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fcd_fao_subzone_view_search" model="ir.ui.view">
        <field name="name">fcd.fao.subzone.view.search</field>
        <field name="model">fcd.fao.subzone</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="zone_id" />
                <field name="subzone"/>
            </search>
        </field>
    </record>

</odoo>
