<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_production_lot_view_inherit_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form (FCD)</field>
        <field name="model">stock.production.lot</field>
        <field name="groups_id" eval="[(4, ref('fcd.group_fcd_user'))]"/>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']/group" position="after">
                <group>
                    <field name="fcd_document_id" string="Partner Lot"/>
                    <field name="fcd_document_line_id" />
                </group>
            </xpath>

            <xpath expr="//page[@name='description']" position="after">
                <page string="Lines">
                    <group>
                        <group>
                            <field name="fcd_document_line_name" />  
                        </group>
                        <group>
                            <field name="fcd_document_line_box_count" />
                        </group>
                    </group>
                    <group string="Lines Notes">
                        <field name="notes_line" nolabel="1" placeholder="This note is added to lines." />
                    </group>
                </page> 
            </xpath>

        </field>
    </record>

    <record id="stock_production_lot_qc_view_inherit_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form (QC)</field>
        <field name="model">stock.production.lot</field>
        <field name="groups_id" eval="[(4, ref('quality_control_oca.group_quality_control_user'))]"/>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="after">
                <page string="Quality">
                    <div class="oe_button_box pt-2 mr-1 ml-1" name="button_box" modifiers="{}"> 
                        <button class="oe_stat_button" name="action_calculate_inspection_context" type="object" icon="fa-list"  help="Inspection" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="fcd_document_created_inspections" widget="statinfo" nolabel="1" class="mr4" />
                                </span>
                                <span class="o_stat_text">Inspection Total</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_calculate_inspection_done_context" type="object" icon="fa-pencil"  help="Inspection" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="fcd_document_done_inspections" widget="statinfo" nolabel="1" class="mr4" />
                                </span>
                                <span class="o_stat_text">Inspection Done</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_calculate_inspection_passed_context" type="object" icon="fa-thumbs-o-up"  help="Inspection" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="fcd_document_passed_inspections" widget="statinfo" nolabel="1" class="mr4" />
                                </span>
                                <span class="o_stat_text">Inspection OK</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_calculate_inspection_failed_context" type="object" icon="fa-thumbs-o-down"  help="Inspection">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="fcd_document_failed_inspections" widget="statinfo" nolabel="1" class="mr4" />
                                </span>
                                <span class="o_stat_text">Inspection Failed</span>
                            </div>
                        </button>
                    </div>

                    <group string="Inspections">
                        <field name="qc_inspection_ids" nolabel="1">
                            <tree>
                                <field name="name" />
                                <field name="user" />
                                <field name="test" />
                                <field name="success" />
                                <field name="state" />
                            </tree>
                        </field>
                    </group>
                    <group string="Quality Notes">
                        <field name="notes_quality" nolabel="1" placeholder="This note is added to quality control." />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="stock_production_lot_view_inherit_tree" model="ir.ui.view">
        <field name="name">stock.production.lot.tree (FCD)</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_qty" />
            </xpath>
        </field>
    </record>

</odoo>
