<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_logistics_schedule_account_move_wizard" model="ir.ui.view">
        <field name="name">logistics.schedule.account.move.wizard.tree</field>
        <field name="model">logistics.schedule.account.move.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>                        
                            <field name="carrier_id" />
                        </group>
                        <group>
                            <field name="journal_id" />
                        </group>
                        <group colspan="2">
                            <field name="logistics_schedule_ids" nolabel="1">
                                <tree>
                                    <field name="state" invisible="1"/>
                                    <field name="picking_id" />
                                    <field name="product_id" />
                                    <field name="destination_partner_id" />
                                    <field name="transport_type" />
                                    <field name="product_uom_qty" />
                                    <field name="logistics_price_unit_type" />
                                    <field name="logistics_price_unit_done" />
                                    <field name="license_plate_1" />
                                    <field name="license_plate_2" />
                                </tree>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button name="create_invoice" id="write_operations" string="Create Invoice" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
