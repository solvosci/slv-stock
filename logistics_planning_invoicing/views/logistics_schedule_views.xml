<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="action_logistics_schedule_create_invoice" model="ir.actions.server">
        <field name="name">Create Invoice</field>
        <field name="model_id" ref="model_logistics_schedule" />
        <field name="binding_model_id" ref="model_logistics_schedule" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_create_invoice_wizard()
        </field>
    </record>

    <record id="logistics_schedule_view_form" model="ir.ui.view">
        <field name="name">logistics.schedule.form</field>
        <field name="model">logistics.schedule</field>
        <field name="inherit_id" ref="logistics_planning_base.logistics_schedule_view_form"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_invoice_wizard" type="object" string="Create Invoice" attrs="{'invisible': ['|', ('is_invoiceable', '=', False), '|', ('account_move_line_id', '!=', False), ('state', '=', 'done')]}"/>
            </xpath>
            <xpath expr="//field[@name='picking_id']" position="after">
                <field name="is_invoiceable" invisible="1"/>
                <field
                    name="account_move_id"
                    attrs="{'invisible': [('account_move_line_id', '=', False)]}"
                    string="In invoice"
                />
                <field
                    name="account_move_line_id"
                    attrs="{'invisible': [('account_move_line_id', '=', False)]}"
                    groups="base.group_no_one"
                />
            </xpath>
            <xpath expr="//field[@name='license_plate_2']" position="after">
                <field
                    name="is_finished"
                    attrs="{'invisible': [
                        '|',
                        ('state', '!=', 'ready'),
                        '|',
                        ('is_invoiceable', '=', True),
                        ('account_move_line_id', '!=', False),
                    ]}"
                    widget="boolean_toggle"
                />
            </xpath>
        </field>
    </record>

    <record id="logistics_schedule_view_tree" model="ir.ui.view">
        <field name="name">logistics.schedule.tree</field>
        <field name="model">logistics.schedule</field>
        <field name="inherit_id" ref="logistics_planning_base.logistics_schedule_view_tree"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <field name="account_move_id" />
                <field name="is_invoiceable" invisible="1"/>
                <!-- field
                    name="is_finished"
                    attrs="{'readonly': ['|', ('state', '!=', 'ready'), ('is_invoiceable', '=', True)]}"
                    widget="boolean_toggle"
                / -->
            </xpath>
        </field>
    </record>

</odoo>
