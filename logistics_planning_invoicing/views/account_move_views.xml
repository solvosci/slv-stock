<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_account_move_logistics_schedule" model="ir.actions.act_window">
        <field name="name">Logistic Schedule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistics.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[("account_move_id", "=", active_id)]</field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[(4, ref('logistics_planning_base.group_lp_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_account_move_logistics_schedule)d" class="oe_stat_button" icon="fa-truck" type="action" attrs="{'invisible': [('logistics_schedule_count', '=', 0)]}">
                    <div class="o_form_field o_stat_info">
                        <field name="logistics_schedule_ids" invisible="1"/>
                        <field name="logistics_schedule_count" widget="statinfo" string="Logistic Schedule"/>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="logistics_schedule_id" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='analytic_account_id']" position="after">
                <field name="logistics_schedule_id" />
            </xpath>
        </field>
    </record>

</odoo>
