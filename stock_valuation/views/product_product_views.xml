<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.product.normal.form.view.inherit (in stock_valuation)</field>
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="stock_account.product_product_normal_form_view_inherit"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <field name="warehouse_valuation" invisible="1"/>
                <field
                    name="standard_price_warehouse_ids"
                    mode="tree"
                    readonly="1"
                    attrs="{'invisible': [('warehouse_valuation','=',False)]}"
                >
                    <tree>
                        <field name="currency_id" invisible="1" />
                        <field name="warehouse_id" />
                        <field name="average_price" options="{'currency_field': 'currency_id'}"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
