<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_stock_picking_logistics_schedule" model="ir.actions.act_window">
        <field name="name">Logistic Schedule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistics.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[("picking_id", "=", active_id)]</field>
    </record>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="groups_id" eval="[(4, ref('logistics_planning_base.group_lp_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_stock_picking_logistics_schedule)d" class="oe_stat_button" icon="fa-truck" type="action" attrs="{'invisible': [('logistics_schedule_count', '=', 0)]}">
                    <div class="o_form_field o_stat_info">
                        <field name="logistics_schedule_count" widget="statinfo" string="Logistic Schedule"/>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom']" position="after">
                <field
                    name="logistics_schedule_disabled"
                    widget="boolean_toggle"
                    optional="hide"
                />
                <field name="logistics_schedule_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
