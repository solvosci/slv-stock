<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_return_picking_ls_wizard" model="ir.ui.view">
        <field name="name">stock.return.picking.ls.wizard.form</field>
        <field name="model">stock.return.picking.ls.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="stock_return_picking_id" invisible="1" />
                        <p>
                            Do you want to create logistics schedules for this return?
                        </p>
                    </group>
                    <footer>
                        <button
                            name="create_return_ls_ok"
                            id="button_create_return_ls_ok"
                            string="YES"
                            type="object"
                            class="oe_highlight"
                        />
                        <button
                            name="create_return_ls_ko"
                            id="button_create_return_ls_ko"
                            string="NO"
                            type="object"
                        />
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
