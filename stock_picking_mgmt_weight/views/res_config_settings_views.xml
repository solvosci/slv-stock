<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_scale_view_form" model="ir.ui.view">
        <field name="name">res.config.settings (scale)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div/h2[@id='schedule_info']" position="before">
                <h2>Scale</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="picking_operations_scale_id"/>
                            <div class="text-muted"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="picking_operations_scale_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="picking_operations_camera_id"/>
                            <div class="text-muted"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="picking_operations_camera_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="picking_operations_asm_id"/>
                            <div class="text-muted"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="picking_operations_asm_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> -->
            </xpath>
        </field>
    </record>
</odoo>
                        