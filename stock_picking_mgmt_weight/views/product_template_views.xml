<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_weight_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form (weight)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <xpath expr="//div/button[@name='action_product_tmpl_forecast_report']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div/button[@name='action_product_tmpl_forecast_report']" position="after">
                <button icon="fa-cubes" attrs="{'invisible':[('type', '!=', 'product')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="expected_qty" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">Expected Qty</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
    <record id="view_product_template_weight_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.tree (weight)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='virtual_available']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='virtual_available']" position="after">
                <field name="expected_qty" attrs="{'invisible':[('type', '!=', 'product')]}" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
