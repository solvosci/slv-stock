<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock.report_delivery_document"
    >
        <!-- Stock moves -->
        <xpath
            expr="//th[@name='th_sm_product']"
            position="after"
        >
            <th name="th_sm_description"><strong>Description</strong></th>
        </xpath>
        <xpath
            expr="//span[@t-field='move.description_picking']"
            position="attributes"
        >
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath
            expr="//span[@t-field='move.product_id']/parent::td"
            position="after"
        >
            <td>
                <span t-field="move.description_picking"/>
            </td>
        </xpath>

        <!-- Stock move lines -->
        <xpath
            expr="//th[@name='th_sml_product']"
            position="after"
        >
            <th name="th_sm_description"><strong>Description</strong></th>
        </xpath>

    </template>

    <template
        id="stock_report_delivery_aggregated_move_lines"
        inherit_id="stock.stock_report_delivery_aggregated_move_lines"
    >
        <xpath expr="//td[1]/p" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//td[1]" position="after">
            <td>
                <span t-esc="aggregated_lines[line]['description']"/>
            </td>
        </xpath>
    </template>
</odoo>
