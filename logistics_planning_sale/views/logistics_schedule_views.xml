<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="logistics_schedule_view_search" model="ir.ui.view">
        <field name="name">logistics.schedule.search (in logistics_planning_sale)</field>
        <field name="model">logistics.schedule</field>
        <field name="inherit_id" ref="logistics_planning_base.logistics_schedule_view_search"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sale_order_id" />
            </xpath>
        </field>
    </record>

    <record id="logistics_schedule_view_form" model="ir.ui.view">
        <field name="name">logistics.schedule.form (in logistics_planning_sale)</field>
        <field name="model">logistics.schedule</field>
        <field name="inherit_id" ref="logistics_planning_base.logistics_schedule_view_form"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field
                    name="sale_order_id"
                    attrs="{'invisible': [('sale_order_id', '=', False)]}"
                />
            </xpath>
        </field>
    </record>

    <record id="logistics_schedule_view_tree" model="ir.ui.view">
        <field name="name">logistics.schedule.tree (in logistics_planning_sale)</field>
        <field name="model">logistics.schedule</field>
        <field name="inherit_id" ref="logistics_planning_base.logistics_schedule_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="sale_order_line_id" invisible="1" />
            </xpath>
            <field name="stock_move_id" position="attributes">
                <attribute
                    name="domain"
                    operation="domain_add"
                    condition=""
                    join_operator="AND"
                >[('sale_line_id', '=', sale_order_line_id)]</attribute>
            </field>
        </field>
    </record>
    <record id="logistics_schedule_view_tree_sale" model="ir.ui.view">
        <field name="name">logistics.schedule.tree sale (in logistics_planning_sale)</field>
        <field name="model">logistics.schedule</field>
        <field
            name="inherit_id"
            ref="logistics_planning_sale.logistics_schedule_view_tree"
        />
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="sale_order_id" optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
