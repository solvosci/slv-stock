<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record
        id="view_logistics_schedule_sale_add_wizard"
        model="ir.ui.view"
    >
        <field name="name">logistics.schedule.sale.add.wizard.form</field>
        <field name="model">logistics.schedule.sale.add.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" />
                            <field name="ls_count" />
                        </group>
                        <group>
                            <field name="ls_new" />
                            <field name="logistics_price_unit_type" />
                            <field
                                name="logistics_price_unit"
                                widget="monetary"
                            />
                            <field name="currency_id" invisible="1" />
                        </group>
                    </group>
                    <footer>
                        <button
                            name="create_logistics_schedules"
                            id="write_operations"
                            string="Create Schedules"
                            type="object"
                            class="oe_highlight"
                        />
                        <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
