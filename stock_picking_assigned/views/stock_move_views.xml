<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_type_kanban" model="ir.ui.view">
        <field name="name">stock.picking.type (SGA)</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_primary_left')]" position="inside">
                <div class="mt8" t-if="['incoming', 'outgoing', 'internal'].indexOf(record.code.raw_value) &gt; -1">
                    <button name="action_open_assigned_wizard" type="object" class="btn btn-secondary">
                        <i class="fa fa-archive fa-2x" title="Start barcode interface"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
