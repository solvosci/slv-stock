<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_barcodes_read_picking_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.picking.form</field>
        <field name="model">wiz.stock.barcodes.read.picking</field>
        <field name="inherit_id" ref="stock_barcodes.view_stock_barcodes_read_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='candidate_picking_ids']/kanban/field[@name='name']" position="after">
                <field name="qty_demand_product"/>
                <field name="qty_done_product"/>
            </xpath>
            <xpath expr="//t[@t-if='record.partner_id.raw_value']" position="after">
                <t><span style="font-size: 20px">[<span style="color: cyan"><field name="qty_done_product" /></span> / <span style="color: cyan"><field name="qty_demand_product"/></span>]</span></t>
            </xpath>
            
        </field>
    </record>

    <record id="view_stock_barcodes_read_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.form</field>
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="inherit_id" ref="stock_barcodes.view_stock_barcodes_read_form"/>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <!-- Original version: context="{'default_product_id': product_id}" -->
            <xpath expr="//group[@groups='stock.group_production_lot']/div/field[@name='lot_id']" position="attributes">
                <attribute name="context">{'default_product_id': product_id, 'stock_barcodes_advanced': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
