<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_kanban" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_barcodes.stock_picking_kanban" />
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <!-- Original version: states="assigned" -->
            <xpath expr="//button[@name='action_barcode_scan']" position="attributes">
                <attribute name="states">confirmed</attribute>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_kanban" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_kanban" />
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <!-- Original version: invisible="not context.get('show_lots_text')" -->
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
