<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_stock_picking_partner" model="res.groups">
            <field name="name">Partners</field>
            <field name="category_id" ref="base.module_category_operations_inventory"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="stock.menu_stock_inventory_control" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('stock.group_stock_manager'))]"/>
        </record>

        <record id="stock.menu_action_inventory_form" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('stock.group_stock_manager'))]"/>
        </record>

        <record id="stock.menu_stock_scrap" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('stock.group_stock_manager'))]"/>
        </record>

        <record id="stock.menu_procurement_compute" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('stock.group_stock_manager'))]"/>
        </record>

        <record id="stock.group_stock_manager" model="res.groups">
            <field name="implied_ids" eval="[(6, 0, [ref('stock_picking_security.group_stock_picking_partner'), ref('account.group_account_invoice')])]"/>
        </record>

    </data>

    <data noupdate="1">
        <record id="stock_picking_type_warehouse_rule" model="ir.rule" forcecreate="True">
            <field name="name">Stock Picking Types: see only own warehouse picking types</field>
            <field name="model_id" search="[('model','=','stock.picking.type')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('stock_picking_security.group_stock_picking_partner'))]"/>
            <field name="domain_force">
                [('default_location_dest_id', '=' ,user.partner_id.property_stock_supplier.id)]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="stock_picking_transfer_operation_rule" model="ir.rule" forcecreate="True">
            <field name="name">Stock Picking: see only own transfer operations</field>
            <field name="model_id" search="[('model','=','stock.picking')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('stock_picking_security.group_stock_picking_partner'))]"/>
            <field name="domain_force">
                ['|', ('location_id', '=', user.partner_id.property_stock_supplier.id), ('location_dest_id', '=', user.partner_id.property_stock_supplier.id)]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="stock_picking_type_warehouse_admin_rule" model="ir.rule" forcecreate="True">
            <field name="name">Stock Picking Types: see all warehouse picking types</field>
            <field name="model_id" search="[('model','=','stock.picking.type')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="domain_force">
                [(1, '=' ,1)]
            </field>
        </record>

        <record id="stock_picking_transfer_operation_admin_rule" model="ir.rule" forcecreate="True">
            <field name="name">Stock Picking: see all transfer operations</field>
            <field name="model_id" search="[('model','=','stock.picking')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="domain_force">
                [(1, '=', 1)]
            </field>
        </record>

    </data>  

    
    

</odoo>
