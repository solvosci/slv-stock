<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_all" model="ir.ui.view">
        <field name="name">sale.order.form all (in logistics_planning_mgmt_weight)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="logistics_planning_sale.view_order_form_all"/>
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='order_lines']/field/form//field[@name='ls_transport_type']"
                position="attributes"
            >
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath
                expr="//page[@name='order_lines']/field/tree/field[@name='ls_transport_type']"
                position="attributes"
            >
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
